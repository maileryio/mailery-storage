{
    "name": "maileryio/mailery-storage",
    "type": "library",
    "description": "File storage module for Mailery Platform",
    "keywords": [
        "mail",
        "mailer",
        "storage"
    ],
    "homepage": "https://github.com/maileryio/mailery-storage",
    "license": "BSD-3-Clause",
    "support": {
        "source": "https://github.com/maileryio/mailery-storage",
        "issues": "https://github.com/maileryio/mailery-storage/issues",
        "wiki": "https://github.com/maileryio/mailery-storage/wiki"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4",
        "foxy/foxy": "^1.0",
        "maileryio/mailery-common": "^1.0@dev",
        "maileryio/mailery-web": "^1.0@dev",
        "ramsey/uuid": "^4.0",
        "yiisoft/router": "^3.0@dev",
        "yiisoft/yii-filesystem": "^3.0@dev"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "hiqdev/composer-config-plugin": "^1.0",
        "phan/phan": "^2.4",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Mailery\\Storage\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mailery\\Storage\\Tests\\": "tests"
        }
    },
    "scripts": {
        "lint": "php-cs-fixer fix --diff --dry-run",
        "fix": "php-cs-fixer fix",
        "phan": "phan --progress-bar -o analysis.txt"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        },
        "config-plugin": {
            "common": "config/common.php",
            "params": "config/params.php",
            "providers": "config/providers.php"
        }
    },
    "config": {
        "sort-packages": true
    }
}
